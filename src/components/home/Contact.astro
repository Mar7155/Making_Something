---
import PrimaryButton from "../ui/PrimaryButton.astro";
import SecondaryButton from "../ui/SecondaryButton.astro";
---

<section id="contact" class="py-20 md:py-40 px-4 flex justify-center items-center flex-col md:flex-row gap-10 md:gap-0">
    <div class="flex flex-col gap-6 justify-center items-center md:w-5/6 lg:w-2/3 shadow-2xl rounded-xl">
        <h1 class="text-6xl font-bold py-4" >Contacto</h1>
        <form class="flex flex-col gap-2 justify-between px-4" action="" method="POST" class="py-10 px-0">
            <label for="nombre">Nombre</label>
            <input class="border rounded-md" type="text" id="nombre" name="nombre" required>
    
            <label for="email">Correo Electr√≥nico</label>
            <input class="border rounded-md" type="email" id="email" name="email" required>
    
            <label for="mensaje">Mensaje</label>
            <textarea class="border rounded-md" id="mensaje" name="mensaje" rows="4" cols="50" required></textarea>
    
            <button class="mt-8 mb-10" type="submit">
                <SecondaryButton href="/" text="Enviar" color="bg-purple-400" />
            </button>
        </form>
    </div>
</section>