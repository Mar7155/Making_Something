---
import {
    SignedIn,
    UserButton,
    SignedOut,
    SignInButton,
} from "@clerk/astro/components";
---

<div class="flex justify-center items-center">
    <SignedIn>
        <UserButton
            appearance={{
                elements: {
                    userButtonAvatarBox: {
                        width: "60px",
                        height: "60px",
                    },
                    userButtonAvatarImage: {
                        width: "100%",
                        height: "100%",
                    },
                },
            }}
        />
    </SignedIn>
    <SignedOut>
        <SignInButton
            class="px-6 py-2 text-black font-bold border border-black rounded-lg shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:cursor-pointer hover:border-1 hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition"
            mode="modal"
        />
    </SignedOut>
</div>
