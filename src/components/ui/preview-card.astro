---
import { Tag } from '@lucide/astro';

interface Props {
    id: string;
    slug: string;
    name: string;
    description: string;
    price?: number;
    imageUrl?: string;
}
const { id, slug, name, description }: Props = Astro.props;
---

<div class="flex flex-col justify-center items-center">
    <a href={`/product/${slug}`} class="hover:cursor-pointer">
        <div
            class="relative bg-blue-400 border-3 rounded-2xl h-52 w-60 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-shadow"
 >
            <div
                class="absolute -top-8 -left-12 text-5xl bg-pink-400 px-5 py-1 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-shadow rounded-t-2xl border-3 border-black rounded-bl-2xl rounded-br-sm"
            >
                <Tag size={30}/>
            </div>
            <div
                class="absolute w-full top-10 left-0 rounded-2xl hover:scale-105 transition"
            >
                <img
                    src="/mercedes.png"
                    alt={description}
                    width="315"
                    height="377"
                    loading="lazy"
                    decoding="async"
                    class="object-bottom absolute group-hover:scale-105 transition"
                />
            </div>
            <button
                class="absolute -bottom-14 right-0 px-5 py-1 bg-amber-400 border-black border-3 rounded-4xl shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:cursor-pointer transition-shadow"
            >
                {name}
            </button>
        </div>
    </a>
</div>
